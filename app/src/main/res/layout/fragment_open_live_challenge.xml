<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nim_dialog_toast_bg"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        >

        <LinearLayout
            android:layout_marginTop="80dp"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/live_song"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/icon_challenge_typ_oneback">

                <ImageView
                    android:id="@+id/relativeLayout_imageView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/icon_challenge_type_singe"/>

                <TextView
                    android:id="@+id/relativeLayout_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayout_imageView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="11dp"
                    android:text="唱歌"
                    android:textColor="#fff"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayout_text"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="5dp"
                    android:text="展示天籁之音，做认证主播"
                    android:textColor="#fff"
                    android:textSize="10sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_margin="15dp"
                android:id="@+id/live_Rap"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_challenge_typ_oneback">

                <ImageView
                    android:id="@+id/relativeLayout_imageView1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/icon_challenge_type_rap"/>

                <TextView
                    android:id="@+id/relativeLayout_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayout_imageView1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="11dp"
                    android:text="Rap"
                    android:textColor="#fff"/>

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayout_text1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="5dp"
                    android:text="用嘻哈诉说你的故事"
                    android:textColor="#fff"
                    android:textSize="10sp"/>


            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/live_dance"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/icon_challenge_typ_oneback">

                <ImageView
                    android:id="@+id/relativeLayout_imageView3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/icon_challenge_type_dance"/>

                <TextView
                    android:id="@+id/relativeLayout_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayout_imageView3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="11dp"
                    android:text="跳舞"
                    android:textColor="#fff"/>

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayout_text2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="5dp"
                    android:text="挑一挑，十年少"
                    android:textColor="#fff"
                    android:textSize="10sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/live_music"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/icon_challenge_typ_oneback">

                <ImageView
                    android:id="@+id/relativeLayout_imageView4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/icon_challenge_type_music"/>

                <TextView
                    android:id="@+id/relativeLayout_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayout_imageView4"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="11dp"
                    android:text="乐器"
                    android:textColor="#fff"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_below="@+id/relativeLayout_text3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="5dp"
                    android:text="多才多艺的你还等什么"
                    android:textColor="#fff"
                    android:textSize="10sp"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/live_sing"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/icon_challenge_typ_oneback">

                <ImageView
                    android:id="@+id/relativeLayout_imageView5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/icon_challenge_type_perform"/>

                <TextView
                    android:id="@+id/relativeLayout_text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayout_imageView5"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="11dp"
                    android:text="唱歌"
                    android:textColor="#fff"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_below="@+id/relativeLayout_text4"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="5dp"
                    android:text="演绎你的人生"
                    android:textColor="#fff"
                    android:textSize="10sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/live_eloquence"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/icon_challenge_typ_oneback">

                <ImageView
                    android:id="@+id/relativeLayout_imageView6"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/icon_challenge_type_eloquence"/>

                <TextView
                    android:id="@+id/relativeLayout_text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayout_imageView6"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="11dp"
                    android:text="口才"
                    android:textColor="#fff"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_below="@+id/relativeLayout_text5"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="5dp"
                    android:text="说话也是一种艺术"
                    android:textColor="#fff"
                    android:textSize="10sp"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>