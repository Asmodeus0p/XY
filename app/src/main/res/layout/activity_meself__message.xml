<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.Meself_MessageActivity">
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/zl_beijing" />

    <ImageView
        android:id="@+id/userinf_break"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/nim_actionbar_dark_back_icon" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="我的资料"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/userinf_bianji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/wdzl_bianji" />

    <ImageView
        android:id="@+id/userinfo_headImage"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="21dp"

        android:layout_marginLeft="12dp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toTopOf="@+id/userinfo_sex"
        app:layout_constraintStart_toEndOf="@+id/userinfo_headImage"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:srcCompat="@mipmap/upimg_default" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toEndOf="@+id/imageView11"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@mipmap/upimg_default" />

    <TextView
        android:id="@+id/userinfo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="陈冠希"
        android:textColor="#fff"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userinfo_headImage" />

    <ImageView
        android:id="@+id/userinfo_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/userinfo_name"
        app:layout_constraintTop_toBottomOf="@+id/userinfo_headImage"
        app:srcCompat="@mipmap/icon_wuman" />

    <TextView
        android:id="@+id/userinfo_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="18岁"
        android:textColor="#fff"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/userinfo_name"
        app:layout_constraintStart_toEndOf="@+id/userinfo_sex" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toEndOf="@+id/userinfo_age"
        app:layout_constraintTop_toBottomOf="@+id/userinfo_headImage"
        app:srcCompat="@mipmap/wdzl_dengji" />

    <TextView
        android:id="@+id/userinfo_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="20dp"
        android:text="2 关注"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/userinfo_fans"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userinfo_age" />

    <TextView
        android:id="@+id/userinfo_fans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="12dp"
        android:text="0 粉丝"
        android:textSize="10sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/userinfo_follow"
        app:layout_constraintEnd_toStartOf="@+id/textView11"
        app:layout_constraintStart_toEndOf="@+id/userinfo_follow" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="208dp"
        android:layout_marginRight="150dp"
        android:text="暂无个性资料"
        android:textSize="10sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/userinfo_fans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/userinfo_fans" />

    <android.support.design.widget.TabLayout
        android:id="@+id/userinfo_tab"
        app:layout_constraintTop_toBottomOf="@id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="40dp">

    </android.support.design.widget.TabLayout>


    <android.support.v4.view.ViewPager
        app:layout_constraintTop_toBottomOf="@id/userinfo_tab"
        android:layout_width="match_parent"
        android:id="@+id/userinf_viewpager"
        android:layout_height="0dp">

    </android.support.v4.view.ViewPager>
</android.support.constraint.ConstraintLayout>