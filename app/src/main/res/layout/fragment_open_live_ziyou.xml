<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_popup_demo"
    android:layout_marginTop="100dp">


    <RelativeLayout
        android:id="@+id/relative12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#AAA"
        android:layout_alignParentLeft="true">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/icon_live_address" />

        <TextView
            android:id="@+id/main_weizhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="5dp"
            android:text="北 京 市"
            android:textColor="#fff"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/live_Camera"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="48dp"
            android:layout_marginRight="48dp"
            android:src="@drawable/ic_switch" />

        <ImageView
            android:id="@+id/live_off"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:src="@drawable/icon_finish" />

    </RelativeLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_margin="20dp"
            android:background="@drawable/nim_dialog_toast_bg">

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/chuantouxiang"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/icon_connxun_logo" />

                <EditText
                    android:id="@+id/miaoshuEd"
                    android:layout_width="170dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/chuantouxiang"
                    android:background="@null"
                    android:gravity="top"
                    android:textColor="#fff" />

            </RelativeLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/relativeLayout"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:background="#ffffff" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/view2"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/wechat"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/icon_wechat_friend" />

                <ImageView
                    android:id="@+id/weibo"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/icon_weibo" />

                <ImageView
                    android:id="@+id/wechatQuan"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/icon_wechat" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp">

            <RelativeLayout
                android:id="@+id/meiyanLin"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/haha"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/icon_live_beauty" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:lines="1"
                    android:layout_toEndOf="@+id/haha"
                    android:text="美颜"
                    android:textColor="#fff"
                    android:layout_toRightOf="@+id/haha" />

            </RelativeLayout>

            <Button
                android:id="@+id/OPENLive_button"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_below="@+id/meiyanLin"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_live_button"
                android:text="开始直播"
                android:textColor="#000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/OPENLive_button"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="开播默认同意遵守：《艺线直播管理条例》|联系客服"
                android:textColor="#fff"
                android:textSize="11sp" />

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
